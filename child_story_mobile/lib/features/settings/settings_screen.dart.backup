      position: Tween<Offset>(begin: Offset(0, 0.1), end: Offset.zero)
          .animate(CurvedAnimation(parent: _entranceController, curve: Interval(delay, 1.0, curve: Curves.easeOut))),
      child: FadeTransition(
        opacity: CurvedAnimation(parent: _entranceController, curve: Interval(delay, 1.0)),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Padding(
              padding: EdgeInsets.only(left: 16, bottom: 12, top: 8),
              child: Text(
                title,
                style: TextStyle(
                  fontSize: AppTypography.body,
                  fontWeight: FontWeight.w800,
                  color: AppColors.textDark,
                ),
              ),
            ),
            Container(
              decoration: BoxDecoration(
                color: Colors.white,
                borderRadius: BorderRadius.circular(24),
                boxShadow: [
                  BoxShadow(
                    color: AppColors.primary500.withOpacity(0.05),
                    blurRadius: 12,
                    offset: Offset(0, 4),
                  ),
                ],
              ),
              child: Column(children: children),
            ),
            SizedBox(height: 24),
          ],
        ),
      ),
    );
  }

